<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="uk.ac.napier.annoyingsoundapplication.Activity2">


    <Button
        android:id="@+id/play_dixiehorn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="77dp"
        android:layout_marginTop="148dp"
        android:text="@string/play_dixiehorn"
        tools:layout_editor_absoluteX="47dp"
        tools:layout_editor_absoluteY="63dp" />

    <Button
        android:id="@+id/play_fart1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/play_dixiehorn"
        android:layout_alignBottom="@+id/play_dixiehorn"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="84dp"
        android:text="@string/play_fart1" />

    <Button
        android:id="@+id/play_fart2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/play_fart1"
        android:layout_alignStart="@+id/play_dixiehorn"
        android:layout_marginBottom="40dp"
        android:text="@string/play_fart2" />

    <Button
        android:id="@+id/play_siren"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/play_fart2"
        android:layout_alignBottom="@+id/play_fart2"
        android:layout_alignStart="@+id/play_fart1"
        android:text="@string/play_siren" />

</RelativeLayout>
